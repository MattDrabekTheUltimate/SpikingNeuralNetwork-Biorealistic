{
    "version": 1,
    "handlers": {
        "fileHandler": {
            "class": "logging.FileHandler",
            "formatter": "myFormatter",
            "filename": "logs/simulation.log"
        }
    },
    "loggers": {
        "": {
            "handlers": ["fileHandler"],
            "level": "INFO"
        }
    },
    "formatters": {
        "myFormatter": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    }
}
